---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<span class="logo">
				Auto Keys Shop
			</span>
			<nav class="menu" id="menu">
				<a href="/" class="item main">
					Главная
				</a>
				<a href="/#aboutus" class="item aboutus">
					О нас
				</a>
				<a href="/#callback" class="item callback">
					Отзывы
				</a>
				<a href="/#uslugi" class="item uslugi">
					Услуги
				</a>

			</nav>
			<div class="hamburger" id="hamburger">
				<span class="line top"></span>
				<span class="line middle"></span>
				<span class="line bottom"></span>
			</div>
			
			  
		</header>
		<slot />
		<footer>
			<h1>Auto Keys Shop</h1>
			<h2>© Auto Keys Shop 2024. Все права защищены.</h2>
			<div class="links">
				<a href="/PrivacyPolicy">
					Политика конфиденциальности
				</a>
				<a href="/PersonalData">
					Согласие на обработку персональных данных
				</a>
			</div>
			<div class="links">
				<a href="">
					<img src="/public/tg.svg" alt="">
				</a>
				<a href="">
					<img src="/public/tg.svg" alt="">
				</a>
			</div>
			<div class="links">
				<a href="biveki.ru" class="latest_link">
					Made with ❤️ by <u>Лев Данилов</u>
				</a>
			</div>
		</footer>
	</body>
</html>
<script>
	document.getElementById("hamburger").onclick = function() {
		const hamburger = document.getElementById("hamburger");
		const menu = document.getElementById("menu");

		// Переключение класса active для гамбургер-меню
		hamburger.classList.toggle("active");

		// Переключение класса active для меню
		menu.classList.toggle("active");
	};

</script>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
  		--font-family: "Inter", sans-serif;
	}
	.latest_link{
        text-decoration: none;
        font-weight: 600;
    }
	.links{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 50px;
        align-items: center;
        justify-content: center;
        margin: 30px 0;
    }
    .links a {
        color: #000;
    }
	.logo{
		font-weight: 600;
		font-size: 48px;
		color: #377dff;
	}
	footer{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		margin: auto;
	}
	.humburger {
		display: none
	}
	footer,
	footer * {
		width: fit-content
	}
	.menu {
		width: fit-content;
		display: flex;
		flex-direction: row;
		gap: 20px;
	}
	.menu .item {
		width: fit-content;
		font-weight: 400;
		font-size: 24px;
		color: #377dff;
		text-decoration: none;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #fff;
	}
	header{
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
	}
	footer{
		margin-top: 500px;
	}
	@media (max-width: 800px){
		.humburger{
			display: block;
		}
		.hamburger {
			width: 35px;
			height: 30px;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			cursor: pointer;
		}

		.line {
			width: 100%;
			height: 5px;
			background-color: #377dff;
			transition: all 0.3s ease;
		}
		header{
			height: 60px;
		}
		.menu {
			position: absolute;
			background-color: #377dff;
			display: flex;
			flex-direction: column;
			width: calc(100% - 60px);
			/* top: 70px; */
			top: -300px;
			left: 0;
			padding: 40px;
		}
		.menu .item{
			color: white
		}

		.hamburger.active{
			transform: translateX(0%);
		}

		.hamburger.active .top {
			transform: rotate(45deg) translateY(350%);
		}

		.hamburger.active .middle {
			opacity: 0;
		}

		.hamburger.active .bottom {
			transform: rotate(-45deg) translateY(-350%);
		}
		.menu.active {
			top: 70px; /* Показываем меню */
		}
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>