---
import Layout from '../../layouts/Layout.astro';
import StoryblokClient from 'storyblok-js-client';
import { getUslugi, getItem, urlFor } from '../../sanityclient';

// Initialize the Storyblok client with the access token
const Storyblok = new StoryblokClient({
  accessToken: "aZO4rIbH4xJiemmkvqBb0gtt",
});

// Function to fetch tovars from Storyblok (currently not used in this component)
async function fetchTovars() {
  return Storyblok.get('cdn/stories/537257932', {})
    .then(response => response.data.story.content); // Fetches and returns content
}

// Static paths for dynamic routing
export async function getStaticPaths() {
  const uslugi = await getUslugi(); // Fetches all "uslugi"

  return uslugi.map((post) => ({
    params: { id: post._id.toString() }, // Generate path based on item ID
  }));
}

// Fetch specific "usluga" item based on the ID from URL
const id = Astro.url.pathname.split("/").at(-1);
const usluga = await getItem(id);
const show = usluga && Object.keys(usluga).length > 0;
console.log(usluga);
---
{show && (
  <Layout title="Auto Keys Shop - Согласие на обработку персональных данных">
    <main>
      <h1 class="maintitle">Экспертный сервис для вашего авто</h1>
      <span class="startSpan">
        Изготовление ключей, прошивка евро2 STAGE-1 и ремонт замков <br /> по лучшим ценам!
      </span>
      <div class="mainimage-block">
        <img src={urlFor(usluga.image1).url()} class="mainimage" alt="Main Image" />
        <div class="info-block">
          <div class="info">
            <h3>Почему выбирают нас?</h3>
            <p>Мы гордимся нашей командой опытных специалистов, которые знают все тонкости работы с автомобилями.</p>
          </div>
        </div>
      </div>
      <article>
        <h3>{usluga.full_title}</h3>
        <p>{usluga.paragraph1}</p>
        <div class="paragraph_with_photo">
          <p>{usluga.paragraph2}</p>
          <img src={urlFor(usluga.image2).url()} alt="Additional Image" />
        </div>
        <p>{usluga.paragraph3}</p>
      </article>
    </main>
  </Layout>
)}
